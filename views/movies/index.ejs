<!--PASSES THIS PAGE TO OUR LAYOUT-->
<% layout('layouts/boilerplate') %>
    <h1>All Movies</h1>
    <div>
        <a href="/movies/new">Add Movie</a>
    </div>
    <% for(let movie of movies){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= movie.posterUrl %> " alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= movie.title %>
                        </h5>
                        <p class="card-text">
                            <%= movie.year %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= movie.nominator %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/movies/<%= movie._id %>">View <i>
                                <%= movie.title %>
                            </i></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>