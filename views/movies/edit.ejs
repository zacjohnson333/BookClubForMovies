<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Movie</h1>
        <div class="col-6 offset-3">
            <form action="/movies/<%= movie._id %>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="movie[title]" value="<%= movie.title %>"
                        required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="year">Year</label>
                    <input class="form-control" type="number" id="year" name="movie[year]" value="<%= movie.year %>"
                        required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="nominator">Nominator</label>
                    <input class="form-control" type="text" id="nominator" name="movie[nominator]"
                        value="<%= movie.nominator %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="posterUrl">Poster Image URL</label>
                    <input class="form-control" type="text" id="posterUrl" name="movie[posterUrl]"
                        value="<%= movie.posterUrl %>" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="tagline">Tagline</label>
                    <textarea class="form-control" type="text" id="tagline"
                        name="movie[tagline]"><%= movie.tagline %></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Movie</button>
                </div>
            </form>
            <a href="/movies/<%= movie._id %> ">Back to Movie</a>
        </div>
    </div>